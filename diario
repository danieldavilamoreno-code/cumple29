  <script>
    const SUPABASE_URL = "TU_URL";
    const SUPABASE_KEY = "TU_KEY";
    const sb = supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

    async function cargarMomentos() {
      const { data, error } = await sb
        .from("momentos")
        .select("*")
        .eq("origen", "lo-que-vive-en-mi")
        .order("fecha", { ascending: true });

      if (error) {
        console.error(error);
        return;
      }

      data.forEach(item => {
        const p = document.createElement("p");
        p.textContent = item.contenido;

        if (item.tipo === "cancion") {
          document.getElementById("lista-canciones").appendChild(p);
        }
        if (item.tipo === "recuerdo") {
          document.getElementById("lista-recuerdos").appendChild(p);
        }
        if (item.tipo === "emocion") {
          document.getElementById("lista-emociones").appendChild(p);
        }
      });
    }

    cargarMomentos();
  </script>
